<h1>商品登録ページ</h1>
<%= form_with model:@item, local:true do |f| %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>税抜き価格</h4>
  <%= f.number_field :price %>
  
  <%= f.text_field :genre_id %>
  <%= f.select :is_active,{販売中:false, 販売停止:true} %>
  <%= f.submit'商品登録' %>
<% end %>